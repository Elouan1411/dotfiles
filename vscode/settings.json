{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "The Best Theme",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  //Surlignage du numéro à coté de la ligne selectionné
  "editor.renderLineHighlight": "gutter",
  //"editor.minimap.enabled": false
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 100,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "fill",
  "editor.smoothScrolling": true,
  // option qui fait la grande ligne de couleur pour voir ou on est
  "editor.guides.bracketPairs": "active",
  "workbench.tree.renderIndentGuides": "always",
  "files.autoGuessEncoding": true,
  "security.allowedUNCHosts": ["Freebox_Server"],
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "todo-tree.general.tags": ["TODO", "FIXME", "README", "REF", "WARN"],
  "todo-tree.tree.autoRefresh": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "foreground": "#ffffff",
      "background": "#a7a7a7",
      "gutterIcon": true
    },
    "README": {
      "foreground": "#ffffff",
      "background": "#648843",
      "iconColour": "#122B3A",
      "icon": "eye",
      "gutterIcon": true
    },
    "FIXME": {
      "gutterIcon": true,
      "foreground": "#ffffff",
      "background": "#ff0000"
    }
  },
  "todo-tree.highlights.useColourScheme": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "python.createEnvironment.trigger": "off",
  "cmake.showOptionsMovedNotification": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "black-formatter.args": ["--line-length", "105"],
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  // "latex-workshop.latex.outDir": ".build",
  // "latex-workshop.latex.tools": [
  //   {
  //     "name": "pdflatex",
  //     "command": "pdflatex",
  //     "args": [
  //       "-output-directory=.build",
  //       "-interaction=nonstopmode",
  //       "-synctex=1",
  //       "%DOC%"
  //     ]
  //   },
  //   {
  //     "name": "move-pdf",
  //     "command": "bash",
  //     "args": ["-c", "mv .build/*.pdf ."]
  //   }
  // ],
  // "latex-workshop.latex.recipes": [
  //   {
  //     "name": "pdflatex with pdf move",
  //     "tools": ["pdflatex", "move-pdf"]
  //   }
  // ],
  "latex-workshop.latex.recipes": [
    {
      "name": "Compiler avec texcompiler",
      "tools": ["texcompiler"]
    }
  ],

  "latex-workshop.latex.tools": [
    {
      "name": "texcompiler",
      "command": "/usr/local/bin/texcompiler",
      "args": ["%DOCFILE%.tex"]
    }
  ],

  "[latex]": {
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "lenagain.latexindent"
    // "latex-workshop.latexindent.enabled": false,
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "explorer.confirmDragAndDrop": false,
  "redhat.telemetry.enabled": true,
  "git.openRepositoryInParentFolders": "always",
  "explorer.confirmDelete": false,
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "shellformat.flag": "-ln 0",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "prettier.tabWidth": 4
  },
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, AllowShortFunctionsOnASingleLine: All, BraceWrapping: { AfterFunction: false, AfterControlStatement: false } }",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "prettier.tabWidth": 4,
    "editor.wordWrap": "on",
    "prettier.printWidth": 160
  },
  "workbench.editor.empty.hint": "hidden",
  "makefile.configureOnOpen": false,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.wordWrap": "on"
  },
  "markdown-preview-github-styles.darkTheme": "dark_tritanopia",
  "python.defaultInterpreterPath": "/home/elouan/automatic/recto-verso-scan/mon_env",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "cSpell.language": "en,fr",
  "jupyter.interactiveWindow.textEditor.executeSelection": true
}
